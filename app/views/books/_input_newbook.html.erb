<p>Title</p>
  <%= f.text_field :title %>
</div>

<div class="text_field">
<p>Opinion</p>
  <%= f.text_area :body %>
</div>

<div class="text_field">
<p></p>
<%= f.submit 'Create Book', class:"btn btn-success" %>
</div>
<% end %>