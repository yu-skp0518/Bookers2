<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
        <% if user_signed_in? %>
      <li class="nav-item">
        <a href="https://85cb7bd991c9405a9b0bff9b767432e1.vfs.cloud9.us-east-1.amazonaws.com/">Bookers</a>
      </li>
      <li class="nav-item">
        <%= link_to 'Home', user_path(current_user) %>
      </li>
      <li class="nav-item">
        <%= link_to 'Users', users_path %>
      </li>
      <li class="nav-item">
        <%= link_to 'Books', books_path %>
      </li>
      <li class="nav-item">
        <%= link_to "logout", destroy_user_session_path, method: :delete %>
      </li>

    <% else %>
      <li class="nav-item">
        <a href="https://85cb7bd991c9405a9b0bff9b767432e1.vfs.cloud9.us-east-1.amazonaws.com/">Bookers</a>
      </li>
      <li class="nav-item">
        <%= link_to 'Home', "/" %>
      </li>
      <li class="nav-item">
        <%= link_to 'About', about_path %>
      </li>
      <li class="nav-item">
        <%= link_to "Sign up", new_user_registration_path %>
      </li>
      <li class="nav-item">
        <%= link_to "login", new_user_session_path %>
      </li>
    <% end %>
  </header>
    <%= yield %>
    <footer></footer>
  </body>
</html>