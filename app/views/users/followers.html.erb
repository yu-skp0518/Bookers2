<body>
  <main>
    <div>
            <h2>Follower Users</h2>
          <table class="table">
           <% if @users.exists? %>
            <thead>
              <tr>
                <th>image</th>
                <th>name</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @followers.each do |user| %>
                <tr>
                  <td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'40x40' %></td>
                  <td><%= user.name %></td>
                  <td>フォロー数：<%= user.relationships.count %></td>
                  <td>フォロワー数：<%= user.reverse_of_relationships.count %></td>
                  <td><%= link_to "Show", user_path(user.id), class: "user_#{user.id}" %></td>
                  <td></td>
                  <td>
                  </td>
                </tr>
                <% end %>
            </tbody>
          <% else %>
                <p>ユーザーはいません</p>
          <% end %>
      </table>


    </div>
  </main>
</body>