<body>
  <main>
    <div class="container">

      <div class="row mx-auto">
          <p id="notice"></p>
            <div class="flash">
              <% flash.each do |key, value| %>
              <%= content_tag(:div, value, class: "#{key}") %>
              <% end %>
            </div>

          <p id="notice"></p>
            <div id="error_explanation">
              <% if @user.errors.any? %>
              <h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
              <% @user.errors.full_messages.each do |message| %>
                    <ul>
                      <li><%= message %></li>
                    </ul>
                  <% end %>
              <% end %>
            </div>
      </div>

        <div class="row mx-auto">
          <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
            <h2 class="col-sm-12 pl-0">User info</h2>
            <%= form_with model:@user, local:true do |f| %>

            <div class="form-group">
              <label for="inputName">Name</label>
              <%= f.text_field :name, class: "form-control name", autofocus: true, id:"inputName", placeholder:"名前"%>
            </div>

            <div class="form-group">
              <label class="col-sm-12 pl-0" for="inputImage">Image</label>
              <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
            </div>

            <div class="form-group">
              <label for="inputCaption">Introduction</label>
              <%= f.text_area :introduction, class: "form-control introduction", autofocus: true, id:"caption", placeholder:"説明"%>
            </div>
            <div class="form-group">
              <%= f.submit "Update User", class:"btn btn-secondary" %>
            </div>

            <% end %>
          </div>
        </div>


    </div>
  </main>
</body>