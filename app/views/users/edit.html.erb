<body>
  <main>
    <p id="notice"></p>
      <div class="container px-5 px-sm-0">
        <div class="flash">
          <% flash.each do |key, value| %>
          <%= content_tag(:div, value, class: "#{key}") %>
          <% end %>
      </div>
    
    <p id="notice"></p>
      <div id="error_explanation">
        <% if @user.errors.any? %>
        <h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
        <% @user.errors.full_messages.each do |message| %>
              <ul>
                <li><%= message %></li>
              </ul>
            <% end %>
        <% end %>        
        
    <div class="editting">
      <h2>User info</h2>
      <%= form_with model:@user, local:true do |f| %>
      
        <label for="inputName">Name</label>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
        <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg"%>
      
        <label for="inputImage">Image</label>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
        
        <label for="inputCaption">Introduction</label>
        <%= f.text_field :caption, autofocus: true, id:"caption", placeholder:"説明"%>
        <%= f.submit "Update User" %>
      
      <% end %>
    </div>
  </body>
</main>