<body>

  <div class="flash">
    <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>
  </div>

  <div class="user-info">
    <h2>User info</h2>
    <%= attachment_image_tag current_user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" %>
    <%= current_user.name %>
    <p>introduction</p>
    <%= current_user.caption %>
    <%= link_to 'profile edit', edit_user_path(current_user.id) %>

  </div>

  <div class="new_book">
    <h2>New Book</h2>
    <%= form_with model:@book, local:true do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>
  <% end %>


  </div>

  <div class="books">
    <h2>Users</h2>
      <thread>
        <tr>
          <th>Image</th>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thread>

      <% @books.each do |book| %>
          <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %>
          <%= book.user.name %>
        <td><%= link_to "show", user_path(book.user_id) %></td>
        </tr>
      <% end %>
  </div>

</body>